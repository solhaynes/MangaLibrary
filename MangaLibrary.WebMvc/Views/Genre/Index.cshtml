@model IEnumerable<GenreListItem>

@{
  ViewData["Title"] = "Genres";
}

<div class="title-description">
  <h1>Genres</h1>
  <p>
    These are all of the genres of manga which currently exist in our library. 
    Click on the button to see more details about the genre.
    Don't see the one you're looking for? Click the red button below to add it!
  </p>
  <div class="button box-shadow">
    <a asp-action="Create" class="no-decoration">Create Genre</a>
  </div>
</div>


<div class="content-container">
  @foreach (var item in Model)
  {
    <div class="item">
      <button class="box-shadow">
        <a asp-action="Details" asp-route-id="@item.Id" class="no-decoration">
          @item.Name
        </a>
      </button>
      <p>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        <span>|</span>
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
      </p>
    </div>
  }
</div>
