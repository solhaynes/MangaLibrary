@model BookDetail
@{
  ViewData["Title"] = Model.SeriesName + " Vol. " + Model.Volume;
}

<h1>@Model.SeriesName Vol. @Model.Volume</h1>
<hr>

<img src="@Model.ImageLink">
<div class="content-container" id="book-details">
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.SeriesName)
    </dt>
    <dd class="col-sm-10">
      <a asp-controller="Series" asp-action="Details" asp-route-id="@Model.SeriesId">@Html.DisplayFor(model =>
        model.SeriesName)</a>
    </dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Volume)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Volume)
    </dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Chapters)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Chapters)
    </dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.ReleaseDate)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.ReleaseDate)
    </dd>
  </dl>

  <div>
    <a asp-action="Index">Back to List</a>
    <span>|</span>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
  </div>
</div>
